            <div >
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-7">
                            Enter Your FirstName<input type="text" id="fname" />
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-7">
                                Enter Your LastName<input type="text" id="lname" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-7">
                                Job Location<select id="loc">
                                    <option id="c">choose location</option>
                                    <option id="p">pune</option>
                                    <option id="m">mumbai</option>
                                    <option id="h">hydrabad</option>
                                    @*//r1.checked == false && r2.checked == false && r3.checked == false*@
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-7">
                                Select Gender
                                <input id="Radio1" type="radio" name="gender" value="male" checked>Male<br>
                                <input id="Radio2" type="radio" name="gender" value="female">female<br>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="container-fluid">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-7">

                                Enter Employee Address:-
                                <textarea id="TextArea1" rows="2" cols="20"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-7">
                                Employee Birthday:
                                <input id="dob" type="date" name="bday">
                                @*<input type="submit" value="Send">*@
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-7">

                                <input id="ch1" type="checkbox" name="vehical1" value="Bike">I have a bike<br>
                                <input id="ch2" type="checkbox" name="vehical1" value="car">I have a Car<br>
                                <input id="ch3" type="checkbox" name="vehical1" value="cab">I want Cab service<br>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container-fluid">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-7">
                                <button type="button" onclick="jsCheck();">Click Me!</button>
                            </div>
                        </div>
